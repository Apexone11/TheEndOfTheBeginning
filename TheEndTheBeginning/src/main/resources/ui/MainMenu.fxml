<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" 
      styleClass="root" spacing="20.0" alignment="CENTER">
   <padding>
      <Insets top="60.0" bottom="60.0" left="40.0" right="40.0" />
   </padding>
   
   <!-- Game Title -->
   <Label text="⚔ THE END THE BEGINNING ⚔" styleClass="title-label" textAlignment="CENTER">
      <font>
         <Font name="System Bold" size="36.0" />
      </font>
   </Label>
   
   <Label text="~ Dungeon Escape RPG ~" textAlignment="CENTER" 
          style="-fx-text-fill: -color-text-muted; -fx-font-size: 18px; -fx-font-style: italic;">
      <VBox.margin>
         <Insets top="-10.0" bottom="30.0" />
      </VBox.margin>
   </Label>
   
   <!-- Main Menu Buttons -->
   <VBox spacing="15.0" alignment="CENTER" prefWidth="300.0">
      <Button fx:id="newGameButton" text="New Game" styleClass="btn-primary" 
              prefWidth="250.0" prefHeight="45.0" />
      
      <Button fx:id="continueButton" text="Continue" styleClass="btn-primary" 
              prefWidth="250.0" prefHeight="45.0" />
      
      <Button fx:id="loadButton" text="Load Game" styleClass="btn-primary" 
              prefWidth="250.0" prefHeight="45.0" />
      
      <Separator prefWidth="200.0">
         <VBox.margin>
            <Insets top="10.0" bottom="10.0" />
         </VBox.margin>
      </Separator>
      
      <Button fx:id="settingsButton" text="Settings" styleClass="btn-accent" 
              prefWidth="250.0" prefHeight="45.0" />
      
      <Button fx:id="quitButton" text="Quit" styleClass="button" 
              prefWidth="250.0" prefHeight="45.0" />
   </VBox>
   
   <!-- Version Info -->
   <Label text="v5.0.0" style="-fx-text-fill: -color-text-muted; -fx-font-size: 11px; -fx-font-style: italic;">
      <VBox.margin>
         <Insets top="40.0" />
      </VBox.margin>
   </Label>
</VBox>
