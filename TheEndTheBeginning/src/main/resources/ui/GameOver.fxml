<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" 
      spacing="30.0" alignment="CENTER">
   <padding>
      <Insets top="80.0" bottom="80.0" left="40.0" right="40.0" />
   </padding>
   
   <Label fx:id="titleLabel" text="GAME OVER" 
          style="-fx-font-size: 48px; -fx-font-weight: bold; -fx-text-fill: -color-danger;" />
   
   <Label fx:id="messageLabel" text="You have fallen in the depths..." 
          style="-fx-font-size: 18px; -fx-text-fill: -color-text-muted;" 
          textAlignment="CENTER" wrapText="true" />
   
   <VBox spacing="15.0" alignment="CENTER" prefWidth="300.0">
      <Button fx:id="retryButton" text="Retry" styleClass="btn-primary" 
             prefWidth="250.0" prefHeight="45.0" />
      
      <Button fx:id="mainMenuButton" text="Main Menu" styleClass="btn-accent" 
             prefWidth="250.0" prefHeight="45.0" />
   </VBox>
</VBox>

