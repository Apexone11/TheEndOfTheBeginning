<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gameproject.MainController">
   <children>
      <Label text="The End The Beginning - Dungeon Escape" textAlignment="CENTER">
         <font>
            <Font name="System Bold" size="24.0" />
         </font>
      </Label>
      
      <ScrollPane prefHeight="400.0" prefWidth="600.0">
         <content>
            <TextArea fx:id="gameTextArea" editable="false" prefHeight="400.0" prefWidth="600.0" wrapText="true" />
         </content>
      </ScrollPane>
      
      <HBox spacing="10.0">
         <children>
            <Label text="Player Stats:" />
            <Label fx:id="healthLabel" text="Health: 100" />
            <Label fx:id="defenseLabel" text="Defense: 1" />
            <Label fx:id="attackLabel" text="Attack: 1" />
            <Label fx:id="levelLabel" text="Level: 1" />
         </children>
      </HBox>
      
      <HBox spacing="10.0">
         <children>
            <TextField fx:id="inputField" prefWidth="400.0" promptText="Enter your choice or command..." />
            <Button fx:id="submitButton" onAction="#handleSubmit" text="Submit" />
         </children>
      </HBox>
      
      <HBox spacing="10.0">
         <children>
            <Button fx:id="startButton" onAction="#handleStart" text="Start Game" />
            <Button fx:id="statsButton" onAction="#handleStats" text="Check Stats" />
            <Button fx:id="resetButton" onAction="#handleReset" text="Reset Game" />
         </children>
      </HBox>
   </children>
</VBox>